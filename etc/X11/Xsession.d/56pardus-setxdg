# Set default environment vars in Pardus
if [ "$XDG_CURRENT_DESKTOP" = XFCE ]; then
	# Set default path to xdg-pardus-xfce	
	export XDG_CONFIG_DIRS=/etc/xdg/xdg-pardus-xfce:/etc/xdg
    # Disable GTK 3.16 overlay scrollbars
    export GTK_OVERLAY_SCROLLING=0
    # QT5 apps to use GTK style
    export QT_STYLE_OVERRIDE=gtk
    # Workaround clutter issue (LP: #1462445)
    export CLUTTER_BACKEND=x11
fi
